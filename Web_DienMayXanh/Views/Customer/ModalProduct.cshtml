
@{
    ViewData["Title"] = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="mb-5">
        <div>
            <div class="mt-3">
                <span class="text-primary" style="font-size:16px">Chi tiết Sản Phẩm</span>
            </div>
            <div class="mb-5" style="border-bottom: 1px solid #808080">
                <h1>Iphone 14 pro max</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <div class="m-3">
                    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel" data-interval="3000" >
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img class="d-block w-100" src="https://cdn.tgdd.vn/Products/Images/42/289663/iPhone-14-plus-thumb-den-600x600.jpg" alt="First slide">
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100" src="https://cdn.tgdd.vn/Products/Images/42/289663/iPhone-14-plus-thumb-den-600x600.jpg" alt="Second slide">
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100" src="https://cdn.tgdd.vn/Products/Images/42/289663/iPhone-14-plus-thumb-den-600x600.jpg" alt="Third slide">
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-6">
                <div >
                    <div class="d-flex mb-3 "style="font-size:18px; font-weight:600">
                        <span class="" >Gia tại: </span>
                        <span class="text-primary">Hồ Chí Minh</span>
                    </div>
                    <div class="d-block">
                        <span style="font-size:16px; color:#000000 ;font-weight:500;text-decoration:line-through">32.000.000đ</span><br />
                        <span style="font-size:16px; color:red ;font-weight:700">25.000.000đ</span>
                    </div>
                </div>
                <div>
                    <div>
                        <h2 class="font-weight-bold">Thông tin sản Phẩm</h2>
                    </div>
                    <div>
                        <p style="font-size:18px; font-weight:400; line-height:28px">
                            Cấu hình iPhone 14 Pro Max tiếp tục dẫn đầu với Apple A16 Bionic. Trước khi đi vào phần hiệu năng, mình sẽ tóm tắt một vài thông số cấu hình của iPhone 14 Max để các bạn nhanh chóng tham khảo nhé: Màn hình: Kích thước 6.7 inch, tấm nền Super Retina XDR OLED, tần số quét 120 Hz ProMotion. CPU: Apple A16 Bionic
                        </p>
                    </div>
                    <div>
                        <button type="button" class="btn btn-primary" style=" min-width: 100%; height: 62px;">Đặt mua ngay</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div>
        <div class="mb-5">
            <h2 class="text-dark">Sản phẩm liên quan</h2>
        </div>
        <div>
            @for (int j = 1; j <= 2; j++)
            {
            <div class="row mb-5 d-flex flex-nowrap " style="gap:10px; margin-bottom:6px; height:290px">

                @for (int i = 0; i <= 5; i++)

                {
                    <a class="product-hover" href="#">
                        <div class="col  list-product" style="padding: 10px">

                            <div class="row list-product-img">
                                <div>
                                    <img class="img-product" style="width:166px" src="	https://cdn.tgdd.vn/Products/Images/42/289663/iPhone-14-plus-thumb-den-600x600.jpg" />
                                </div>
                            </div>
                            <div class="row" style="padding:0 0 0 15px">
                                <span style="font-size:14px; font-weight:500">IPhone 14 Pro-max</span>
                            </div>
                            <div class="row">
                                <div class="col-8">

                                    <span style="font-size:16px; font-weight:700">32.000.000đ</span>
                                </div>
                                <div class="col-4">
                                    <div type="button" class="btn btn-primary" style="font-size:8px">
                                        <i class="fa-solid fa-cart-shopping"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col" style="justify-content:center">
                                    <span class="fa fa-star checked"></span>
                                    <span class="fa fa-star checked"></span>
                                    <span class="fa fa-star checked"></span>
                                    <span class="fa fa-star checked"></span>
                                    <span class="fa fa-star checked"></span>
                                </div>
                            </div>

                        </div>
                    </a>
               
                }
            </div>}
        </div>
    </div>
</div>
